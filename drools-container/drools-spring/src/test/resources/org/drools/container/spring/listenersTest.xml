<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:drools="http://drools.org/schema/drools-spring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://drools.org/schema/drools-spring org/drools/container/spring/drools-spring-1.4.0.xsd
                           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <drools:resource id="resource1" type="DRL" source="classpath:org/drools/container/spring/sample.drl"/>
       
    <drools:ksession id="statefulSession" type="stateful" kbase="kbase">
        <drools:agendaEventListener>
            <bean class="org.drools.container.spring.TrackingAgendaEventListener"/>
        </drools:agendaEventListener>
    </drools:ksession>
      
    <drools:kbase id="kbase">
        <drools:resources>
            <drools:resource ref="resource1"/>
        </drools:resources>
       
    </drools:kbase>

</beans>
