package org.drools.camel.component

import org.kie.camel.embedded.camel.testdomain.Person;

rule "getOlder rule"
    no-loop
    when
        $p : Person()
    then
        $p.setAge($p.getAge() + 1);
        update($p);
end

query "people over the age of x"  (int x)
    person : Person( age > x)
end
