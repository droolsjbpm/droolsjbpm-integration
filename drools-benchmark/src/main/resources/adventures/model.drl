package org.drools.adventures

dialect "mvel"

declare Thing
end

declare Room extends Thing
    name : String @key
end

declare Location
    thing : Thing @key
    target : Thing @key
end

declare Item extends Thing
    name : String @key
    fixed : boolean
end

declare Door extends Thing
   fromRoom : Room @key
   toRoom : Room @key
end

declare Here
   room : Room @key
end

declare Holding
   character : String @key
   thing : Thing @key
end

declare GameEvent
   @role(event)
end

declare ExitEvent extends GameEvent
   @role(event)
   room : Room @key
end

declare EnterEvent extends GameEvent
   @role(event)
   room : Room @key
end

declare PickupEvent extends GameEvent
   @role(event)
   character : String @key
   thing : Thing @key
end

declare DropEvent extends GameEvent
   @role(event)
   character : String @key
   thing : Thing @key
end

declare Command
end

declare DropCommand extends Command
   thing : Thing @key
end

declare MoveCommand extends Command
   room : Room @key
end

declare PickupCommand extends Command
   thing : Thing @key
end
