<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <!--
  <parent>
    <groupId>org.drools</groupId>
    <artifactId>drools-osgi-uber-workaround</artifactId>
    <version>6.0.0-SNAPSHOT</version>
  </parent>
    -->
  <groupId>org.drools</groupId>
  <artifactId>drools-compiler-uber-workaround</artifactId>
  <packaging>bundle</packaging>
  <version>6.0.0-SNAPSHOT</version>
  <name>Drools :: OSGi Core &amp; compiler uber bundle</name>

  <dependencies>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>drools-core</artifactId>
      <scope>compile</scope>
      <version>6.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>drools-compiler</artifactId>
      <scope>compile</scope>
      <version>6.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.kie</groupId>
      <artifactId>kie-api</artifactId>
      <scope>compile</scope>
      <version>6.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.kie</groupId>
      <artifactId>kie-internal</artifactId>
      <scope>compile</scope>
      <version>6.0.0-SNAPSHOT</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <version>2.3.7</version>
        <configuration>
          <instructions>
            <Bundle-Name>Drools Core, Compiler &amp; KIE</Bundle-Name>
            <Import-Package>
              !com.sun*,
              !org.drools*,
              org.drools.grid,
              org.drools.grid.impl,
              <!-- TODO To be investigated as this package is required by org.drools.builder.conf.impl
              org.kie.process;resolution:=optional,
               -->
              <!-- Required for CDI stuffs -->
              javax.enterprise.context,
              <!-- java compilers are optional: only need one at most -->
              org.codehaus.janino.*;resolution:=optional,
              org.eclipse.jdt.*,
              *
            </Import-Package>
            <Embed-Dependency>artifactId=drools-core|drools-compiler|kie-api|kie-internal;scope=compile</Embed-Dependency>
            <DynamicImport-Package>
              <!-- Add this package as some classes are created by EclipseCompiler -->
              org.kie.process
            </DynamicImport-Package>
            <Embed-Transitive>false</Embed-Transitive>
            <_exportcontents>
              org.drools*,
              org.kie*
            </_exportcontents>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
